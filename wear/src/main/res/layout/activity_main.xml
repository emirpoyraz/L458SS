<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/light_grey"
    android:layout_alignParentBottom="true"
    android:weightSum="1">


    <Button
        android:id="@+id/stress1Id"
        android:layout_width="wrap_content"
        android:layout_height="31dp"
        android:text="1"
        android:orientation="horizontal"
        android:layout_column="3"
        android:layout_above="@+id/stress2Id"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal">

    </Button>

    <Button
        android:id="@+id/stress2Id"
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:text="2"
        android:layout_column="3"
        android:layout_above="@+id/stress4Id"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal">

    </Button>

    <Button
        android:id="@+id/stress3Id"
        android:layout_width="wrap_content"
        android:layout_height="34dp"
        android:text="3"
        android:orientation="horizontal"
        android:layout_column="3"
        android:layout_above="@+id/stress3Id"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal">

    </Button>


    <Button
        android:id="@+id/stress4Id"
        android:layout_width="wrap_content"
        android:layout_height="29dp"
        android:text="4"
        android:layout_column="3"
        android:layout_above="@+id/stress5Id"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal">

    </Button>

    <Button
        android:id="@+id/stress5Id"
        android:layout_width="wrap_content"
        android:layout_height="34dp"
        android:text="5"
        android:layout_column="3"
        android:layout_above="@+id/movingBallId"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal">

    </Button>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:weightSum="1">

    <Button
        android:id="@+id/stopServiceId"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:text="Stop"
        android:layout_column="3"
        android:layout_alignParentBottom="true">

    </Button>

    <Button android:id="@+id/startServiceId"
        android:layout_width="wrap_content"
        android:layout_height="29dp"
        android:text="Start"
        android:layout_above="@+id/stopServiceId"
        android:layout_centerHorizontal="true">
    </Button>


</LinearLayout>
</LinearLayout>